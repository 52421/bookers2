<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
	  <h2>User info</h2>
    <table class="table">
     <tbody>
      <tr>
       <th>
        <%= image_tag @user.get_profile_image(100,100) %>
       </th>
       </tr>
       <tr>
	       <th>name</th>
	       <th><%= @user.name %></th>
        </tr>
       <tr>
	       <th>introduction</th>
       </tr>
     </tbody>
    </table>
      
      <div class="container">
       <div class="row">
        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
         <span class="fa-solid fa-user-gear" aria-hidden="true"></span>
        <% end %>
       </div>
      </div>

  <h2 class="mt-3">New book</h2>       
 <%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :Title %></br>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-body">
  	<%= f.label :Opinion %></br>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions"></br>
    <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
  </div>
 <% end %>
</div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tbody>
        <tr>
          <td><%= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
         </tr>
        </tbody>
      </table>
    </div>
 </div>
</div>
