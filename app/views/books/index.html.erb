<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User Info</h2>
      <table class="table">
       <tbody><tr></tr>
        <tr>
         <th>
          <%= image_tag @user.get_profile_image(100,100) %>
         </th>
        </tr>
	       <th>name</th>
	        <th><%= @user.name %></th>
        </tr>
       <tr>
	       <th>introduction</th>
	      <th></th>
       </tr>
       </tbody>
      </table>
      
      <div class="row">
       <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
        <span class="fa-solid fa-user-gear" aria-hidden="true"></span>
       <% end %>
      </div>
       
 <h2 class="mt-3">New book</h2> 
  <% if @book.errors.any? %>
   <%= @book.errors.count %>件のエラーが発生しました
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>
 <%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :Title %></br>
    <%= f.text_field :title, class: "col-xs-12" %>
  </div>

  <div class="form-body">
  	<%= f.label :Opinion %></br>
    <%= f.text_area :body, class: "col-xs-12" %>
  </div>

  <div class="actions"></br>
    <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
  </div>
 <% end %>
</div>
  
  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
  <table class="table">
   <thead>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
   </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
     <td><%= image_tag book.user.get_profile_image(100,100) %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
  </table>
  </div>
 </div>
</div>
